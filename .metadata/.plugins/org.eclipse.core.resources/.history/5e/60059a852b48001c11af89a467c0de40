package com.TechForum.controlStatements;

public class NumberTriangle {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		new NumberTriangle().drawTriangle(5);
	}

	public void drawTriangle(int num) {

		for (int i = 1; i <= num; i++) {

			for (int j = 1; j <= i; j++) {
				System.out.print(j);
			}
			System.out.println();
		}
		System.out.println();
		for (int i = num; i >= 1; i--) {

			for (int j = i; j >= 1; j--) {
				System.out.print(j);
			}
			System.out.println();
		}
		
		
	}

}
